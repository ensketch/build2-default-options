# Use Git with 'main' as default branch.
#
--vcs git,branch=main

# Remove '.gitignore' files generated by build2.
# These do not use whitelisting.
#
--post-hook "$config.install.root$/.build2/rm-gitignore.sh @root@"

--type bare,license=TODO
--type lib,license=TODO
--type exe,license=TODO

--post-hook "cp $config.install.root$/.build2/AUTHORS.md @root@/."
--post-hook "cp $config.install.root$/.build2/project.gitignore @root@/.gitignore"
--post-hook "cp $config.install.root$/.build2/project.clang-format @root@/.clang-format"
